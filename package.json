{
  "name": "boilerplate-react",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "config": "node scripts/configure.mjs",
    "prepare": "husky",
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint --config eslint.config.mjs \"src/**/*.{ts,tsx}\"",
    "lint:report": "eslint --config eslint.config.mjs \"src/**/*.{ts,tsx}\" -f json --output-file reports/lint.json && node scripts/eslint-report.mjs reports/lint.json reports/lint.md",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageReporters=json-summary --coverageReporters=text --coverageReporters=text-summary",
    "playwright": "npm run build && playwright test",
    "security": "eslint \"src/**/*.{ts,tsx}\" --config eslint.security.config.mjs",
    "security:report": "eslint \"src/**/*.{ts,tsx}\" --config eslint.security.config.mjs -f json --output-file reports/security.json && node scripts/eslint-report.mjs reports/security.json reports/security.md",
    "coverage:report": "npm run test:coverage && node scripts/coverage-report.mjs"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.1.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --config eslint.config.mjs --fix",
      "tsc --noEmit --project tsconfig.json"
    ]
  }
}
